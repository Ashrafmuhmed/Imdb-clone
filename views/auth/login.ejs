<%- include('../includes/head.ejs', {
    pageTitle: login ? 'IMDB Clone - Login' : 'IMDB Clone - Reset Password',
    showNav: false
}) %>
    <link rel="stylesheet" href="/css/login.css">
</head>
<body class="auth-page">
    <div class="container">
        <% if(login) { %>
        <h2>Welcome Back</h2>
        <% }else{ %>
        <h2>Reset Passwrod</h2>
        <% } %>

        <form id="loginForm" action="<%= login ? '/login' : '/reset' %>" method="POST">
            <input type="email" name="email" id="email" placeholder="Email" required>
            <% if( login ) { %>
                <input type="password" name="password" id="password" placeholder="Password" required>
            <% } %>
            <input type="hidden" name="_csrf" value="<%=csrfToken%>">

            <% if(login) { %>
                <button type="submit">Sign In</button>
            <% } else { %>
                <button type="submit">Reset Password</button>
            <% } %>
            <div class="error" id="errorMessage"></div>
        </form>

        <% if(login)  { %>
            <p>Forget your password? <a href="/reset">Reset my password</a></p>
            <p>Don't have an account? <a href="/register">Register here</a></p>
        <%}%>

        <% if (typeof error !== 'undefined') { %>
            <div class="error"><%= error %></div>
        <% } %>
        <% if (typeof success !== 'undefined') { %>
            <div class="success" style="background: #d4edda; color: #155724; padding: 12px; border-radius: 8px; margin-top: 15px; font-size: 14px; border: 1px solid #c3e6cb;"><%= success %></div>
        <% } %>
    </div>

    <script src="/js/login.js"></script>
<%- include('../includes/end.ejs') %>